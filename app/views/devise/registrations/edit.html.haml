.col-md-6.col-md-offset-2
  .row
    .panel.panel-default
      .panel-heading
        %h2 Edit Your Account
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| 
          = devise_error_messages!

          .form-group
            = f.input :email, input_html: {class: 'form_control'} , autofocus: true
          = if devise_mapping.confirmable? && resource.pending_reconfirmation? 
            %div Currently waiting confirmation for: #{resource.unconfirmed_email}
          .form-group
            = f.input :password, input_html: {class: 'form_control'},  autocomplete: "off" 
            %i (leave blank if you don't want to change it)
          .form-group
            = f.input :password_confirmation, input_html: {class: 'form_control'},  autocomplete: "off" 
          .form-group
            = f.input :current_password, input_html: {class: 'form_control'}, autocomplete: "off" 
            %i (we need your current password to confirm your changes)

          = f.button :submit, class: 'btn btn-primary'
          
          %h3 Cancel my account
          %p
          = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"
          = link_to "Back", :back, class: "btn btn-default"