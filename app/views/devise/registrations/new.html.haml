.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading
        %h2 Sign up
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| 
          = devise_error_messages!

          .form-group
            = f.input :email, input_html: {class: 'form_control'} , autofocus: true
          .form-group
            = f.input :password, input_html: {class: 'form_control'},  autocomplete: "off" 
            - if @validatable 
              %em 
                (#{@minimum_password_length} characters minimum)
          .form-group
            = f.input :password_confirmation, input_html: {class: 'form_control'},  autocomplete: "off" 

          .action
            = f.button :submit, class: 'btn btn-primary'