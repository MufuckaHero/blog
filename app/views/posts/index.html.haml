#posts.transitions-enabled

  - @posts.each do |post| 
    .box.panel.panel-default
      - if post.image.present? 
        = link_to (image_tag post.image.url), post
      %h2= link_to post.title, post_path(post) 
      .panel-footer
        .row
          Submitted by
          = post.user.email
          %br
          = post.created_at.strftime("%B %d, %Y")

  %br

