%h1= @post.title 
 
%p= @post.text 

%p= @post.user.email

%p
  -if @post.user == current_user
    %button.btn.btn-default= link_to 'Edit', edit_post_path(@post) 
    %button.btn.btn-default= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } 

%br

.col-lg-6
  %h4 Comments
  = render @post.comments 


  %h4 Add a comment:

  = render "comments/form"

  %p 
    = link_to 'All Posts', posts_path 

